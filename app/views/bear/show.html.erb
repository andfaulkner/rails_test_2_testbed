<h1>Bear#create</h1>
<p>Find me in app/views/bear/create.html.erb</p>


<%= form_for(Bear.new, url: bear_path) do |f| %> <!-- f is a form builder object -->
	
	<%= f.label :bear_type %>
	<%= f.text_field :bear_type %>

	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.submit "Submit new bear!", class: "btn btn-primary" %>
<% end %>